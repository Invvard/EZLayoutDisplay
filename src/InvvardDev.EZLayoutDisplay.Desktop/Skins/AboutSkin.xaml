<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="EzLogo" UriSource="Images/about-logo.png"/>
    
    <Style TargetType="Label"  x:Key="LabelBaseStyle">
        <Setter Property="Foreground" Value="#FF4D3511"/>
    </Style>

    <Style TargetType="Label" x:Key="AppTitleStyle" BasedOn="{StaticResource LabelBaseStyle}">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="Padding" Value="5,5,5,2" />
    </Style>

    <Style x:Key="TitleLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelBaseStyle}" >
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="InfoLabelStyle" TargetType="Label" BasedOn="{StaticResource TitleLabelStyle}" >
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>

</ResourceDictionary>